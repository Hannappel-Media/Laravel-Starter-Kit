{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/livewire-starter-kit",
    "type": "project",
    "description": "The official Laravel starter kit for Livewire.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "artesaos/seotools": "^1.3",
        "blade-ui-kit/blade-icons": "^1.8",
        "laravel/fortify": "^1.30",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.41",
        "laravel/pennant": "^1.18",
        "laravel/pulse": "^1.4",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.9.0",
        "nwidart/laravel-modules": "^12.0",
        "spatie/laravel-backup": "^9.3",
        "spatie/laravel-honeypot": "^4.6",
        "spatie/laravel-permission": "^6.24",
        "spatie/laravel-sitemap": "^7.3",
        "spatie/laravel-translatable": "^6.12"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "driftingly/rector-laravel": "^2.1",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.51",
        "laravel/telescope": "^5.16",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "peckphp/peck": "^0.2.0",
        "pestphp/pest": "^4.2",
        "pestphp/pest-plugin-browser": "^4.1",
        "pestphp/pest-plugin-faker": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-livewire": "^4.0",
        "pestphp/pest-plugin-profanity": "^4.2",
        "pestphp/pest-plugin-stressless": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpdocumentor/shim": "*",
        "spatie/laravel-error-solutions": "^1.0",
        "spatie/laravel-mail-preview": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "test:all": "./vendor/bin/pest --parallel",

        "test:unit": "./vendor/bin/pest --testsuite=Unit --parallel",
        "test:feature": "./vendor/bin/pest --testsuite=Feature --parallel",
        "test:arch": "./vendor/bin/pest --testsuite=Architecture --parallel",

        "test:coverage": "./vendor/bin/pest --coverage",
        "test:unit-coverage": "./vendor/bin/pest --testsuite=Unit --coverage",
        "test:feature-coverage": "./vendor/bin/pest --testsuite=Feature --coverage --min=80",

        "test:type-coverage": "./vendor/bin/pest --type-coverage --min=100 --type-coverage-json=typecov-report.json",

        "test:mutate": "./vendor/bin/pest --mutate --parallel --min=40",
        "test:profanity": "./vendor/bin/pest --profanity --output=profanity-report.json",

        "test:browser": "./vendor/bin/pest --testsuite=Browser",
        "test:browser-coverage": "./vendor/bin/pest --testsuite=Browser --coverage",

        "analyse": "./vendor/bin/phpstan analyse --memory-limit=2G",
        "peck": "./vendor/bin/peck",
        "refactor": "./vendor/bin/rector process --dry-run",
        "refactor:apply": "./vendor/bin/rector process"
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        },
        "merge-plugin": {
            "include": [
                "Modules/*/composer.json"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpdocumentor/shim": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
